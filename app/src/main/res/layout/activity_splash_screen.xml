<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:padding="14dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/eyesight_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_title_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/from"
        android:textSize="16sp"
        android:fontFamily="@font/inter_24pt_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp" />

    <TextView
        android:id="@+id/title_eyesight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eyesight"
        android:textSize="16sp"
        android:fontFamily="@font/inter_24pt_medium"
        android:textColor="@color/primary"
        app:layout_constraintStart_toStartOf="@id/tv_title_from"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_from"
        app:layout_constraintTop_toBottomOf="@id/tv_title_from"
        android:layout_marginTop="8dp" />
    

</androidx.constraintlayout.widget.ConstraintLayout>